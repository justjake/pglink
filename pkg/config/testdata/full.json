{
  "listen": [":5432", "127.0.0.1:6432"],
  "servers": [
    {
      "database": "production",
      "users": [
        {
          "username": {"insecure_value": "app_user"},
          "password": {"insecure_value": "app_password"}
        },
        {
          "username": {"insecure_value": "readonly_user"},
          "password": {"insecure_value": "readonly_password"}
        }
      ],
      "backend": {
        "host": "db.example.com",
        "port": 5432,
        "database": "production",
        "sslmode": "require",
        "connect_timeout": "10",
        "pool_max_conns": 100,
        "pool_min_conns": 10,
        "pool_max_conn_lifetime": "1h",
        "pool_max_conn_idle_time": "30m",
        "pool_health_check_period": "1m",
        "default_startup_parameters": {
          "application_name": "pglink",
          "timezone": "UTC"
        }
      },
      "track_extra_parameters": ["TimeZone", "client_encoding"]
    }
  ]
}
